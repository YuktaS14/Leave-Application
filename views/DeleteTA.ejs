                            <div>
                                <form action="/admin/deleteTA" method="post">
                                    <label for="rollNo" style="margin-bottom: 0.8%;margin-top: 0.8%;" >Roll No</label>
                                    <!-- <input type="text" id="rollNo" name="RollNo" required placeholder="Roll No.."> -->
                                    <select name="rollNo" class="select2" id="select-value"
                                        style="background-color: white; height: 15%;" required
                                        onchange="writeName(value)">
                                        <option value="" selected disabled> select roll no </option>
                                        <% student_list.forEach(row=> { %>
                                            <option value="<%-row.rollno%>"> <%-row.rollno %> </option>
                                            <% }) %>
                                    </select>


                                    <script>

                                        $(document).ready(function () {
                                            $('.select2').select2({
                                                placeholder: "select roll no",
                                                allowClear: true,
                                                width: "100%",
                                                dropdownAutoWidth: true,
                                            });
                                        });
                                    </script>


                                    <label for="name"  style="margin-bottom: 0.8%;margin-top: 0.8%;" >Name</label>
                                    <input type="text" id="name" name="name" placeholder="Name.." readonly>

