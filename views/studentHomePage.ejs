            margin: 0;
            padding: 0;
        }

        .header {
            background-color: #4CAF50;
            text-align: center;
            padding: 20px;
        }

        .header h1,
        .header h2 {
            margin: 0;
            color: white;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        hr {
            border: none;
            height: 1px;
            background-color: #ddd;
            margin: 40px 0;
        }

        /* Style the navigation bar */
        .navbar {
            background-color: #333;
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            font-family: 'Montserrat', sans-serif;
        }

        /* Style the navigation links */
        .navbar a {
            color: #fff;
            margin-left: 20px;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            transition: color 0.3s ease-in-out;
        }

        /* Style the navigation links on hover */
        .navbar a:hover {
            color: #ddd;
        }

        /* Style the logout button */
        .navbar button {
            background-color: #fff;
            color: #333;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        /* Style the logout button on hover */
        .navbar button:hover {
            background-color: #ddd;
        }

        /* Style the dropdown menu */
        .dropdown {
            position: relative;
            display: inline-block;
        }

        /* Style the dropdown button */
        .dropdown button {
            /* background-color: #4CAF50; */
            /* color: white; */
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease-in-out;
        }

        /* Style the dropdown button on hover */
        .dropdown button:hover {
            background-color: #3e8e41;
        }

        /* Style the dropdown content */
        .dropdown-content {
            display: none;
            position: absolute;
            z-index: 1;
            background-color: #f1f1f1;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            padding: 12px 16px;
            margin-top: 5px;
            border-radius: 5px;
        }

        /* Style the dropdown links */
        .dropdown-content a {
            color: #050101;
            font-size: 16px;
            font-weight: bold;
            text-decoration: none;
            display: block;
            padding: 5px 0;
            width: 20rem;
        }

        /* Style the dropdown links on hover */
        /* .dropdown-content a:hover {
		background-color: #ddd;
	} */

        /* Show the dropdown content on hover */
        .dropdown:hover .dropdown-content {
            display: block;
        }

